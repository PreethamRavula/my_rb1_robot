<?xml version="1.0"?>

<robot name="my_rb1_robot">

    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="right_wheel">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="left_wheel">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="front_caster">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="back_caster">
        <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="front_laser">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="joint_base_front_laser">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>

    <gazebo reference="joint_base_front_caster">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>

    <gazebo reference="joint_base_back_caster">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>

    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <UpdateRate>20</UpdateRate>
            <leftJoint>joint_base_left_wheel</leftJoint>
            <rightJoint>joint_base_right_wheel</rightJoint>
            <wheelSeperation>0.4</wheelSeperation>
            <wheelDiameter>0.5</wheelDiameter>
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_link</robotBaseFrame>
        </plugin>
    </gazebo>

    <gazebo reference="front_laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>false</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so" >
                <topicName>/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

    <!-- Link - base_footprint  -->
    <link name="base_footprint">
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <box size="0.001 0.001 0.001"/>
                </geometry>
            </visual>
    </link>

    <!-- Link - base_link -->
    <link name="base_link">
        <inertial>
            <mass value="25.0" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.578" ixy="0.0" ixz="0.0" iyy="0.578" iyz="0.0" izz="0.781" />
        </inertial>

        <collision>
            <geometry>
                <cylinder radius="0.25" length="0.30" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>

        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.30" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="Blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>
    </link>

    <!-- Link - right_wheel -->
    <link name="right_wheel">
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 -0.025 0" rpy="1.5708 0 0" />
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0002" />
        </inertial>

        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.05" />
            </geometry>
            <origin xyz="0 -0.025 0" rpy="1.5708 0 0" />
        </collision>

        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.05" />
            </geometry>
            <material name="Red">
                <color rgba="0.7 0.1 0.1 1" />
            </material>
            <origin xyz="0 -0.025 0" rpy="1.5708 0 0" />
        </visual>
    </link>

    <!-- Link - left_wheel -->
    <link name="left_wheel">
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0.025 0" rpy="1.5708 0 0" />
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0002" />
        </inertial>

        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.05" />
            </geometry>
            <origin xyz="0 0.025 0" rpy="1.5708 0 0" />
        </collision>

        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.05" />
            </geometry>
            <material name="Red">
                <color rgba="0.7 0.1 0.1 1" />
            </material>
            <origin xyz="0 0.025 0" rpy="1.5708 0 0" />
        </visual>
    </link>

    <!-- Link - front_caster -->
    <link name="front_caster">
        <inertial>
            <mass value="0.1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000025" ixy="0.0" ixz="0.0" iyy="0.000025" iyz="0.0" izz="0.000025" />
        </inertial>

        <!-- Caster wheel -->
        <collision>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>

        <visual>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 1" />
            </material>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>

    <!-- Link - back_caster -->
    <link name="back_caster">
        <inertial>
            <mass value="0.1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000025" ixy="0.0" ixz="0.0" iyy="0.000025" iyz="0.0" izz="0.000025" />
        </inertial>

        <!-- Caster wheel -->
        <collision>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>

        <visual>
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 1" />
            </material>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>

    <!-- Link - front_laser -->
    <link name="front_laser">
        <inertial>
            <mass value="0.1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="1.75e-5" ixy="0.0" ixz="0.0" iyy="1.75e-5" iyz="0.0" izz="5e-6" />
        </inertial>
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.02" />
            </geometry>
            <origin xyz="0 0 0.01" rpy="3.14159 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.02" />
            </geometry>
            <origin xyz="0 0 0.01" rpy="3.14159 0 0"/>
        </collision>
    </link>

    <!-- Joints -->
    
    <!-- Joint - base_footprint / base_link -->
    <joint name="joint_base_footprint_base_link" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin rpy="0 0 0" xyz="0 0 0.15" />
    </joint>

    <!-- Joint - base_link / right_wheel -->
    <joint name="joint_base_right_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 -0.2 -0.15" />
        <child link="right_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Joint - base_link / left_wheel -->
    <joint name="joint_base_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 0.2 -0.15" />
        <child link="left_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Joint - base_link / front_caster -->
    <joint name="joint_base_front_caster" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0.0 -0.15" />
        <child link="front_caster" />
        <parent link="base_link" />
        <joint_properties damping="0.0" friction="0.0" />
    </joint>

    <!-- Joint - base_link / back_caster -->
    <joint name="joint_base_back_caster" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0.0 -0.15" />
        <child link="back_caster" />
        <parent link="base_link" />
        <joint_properties damping="0.0" friction="0.0" />
    </joint>

    <!-- Joint - base_link / front_laser -->
    <joint name="joint_base_front_laser" type="fixed">
        <origin rpy="3.14159 0 0" xyz="0.25 0.0 0.075" />
        <child link="front_laser" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
</robot>
